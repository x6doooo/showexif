{
  "name": "showExif",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "show exif",
  "icons": {
   "16": "images/icon-16.png",
   "48": "images/icon-48.png",
   "128": "images/icon-128.png"
  },
  "browser_action": {
  	"default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["jquery-1.8.2.js", "binaryajax.js", "exif.js", "showexif.js"]
    }
  ]
}
